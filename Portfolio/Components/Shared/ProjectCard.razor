@namespace Portfolio.Components

@if(project is not null)
{
    <MudLink Href="@project.Link" Underline="Underline.None">
        <div class="project-card-container rounded-lg">

            <MudPaper>
                <MudImage Class="rounded-lg" src="@project.Background" ObjectFit="ObjectFit.Cover" />
            </MudPaper>
            <MudPaper Class="hover-img">
                <MudImage src="@project.Foreground" ObjectFit="ObjectFit.Cover" />
            </MudPaper>
            <div Class="pa-2 project-label-container rounded-lg">
                <MudText Class="project-label" Typo="Typo.h3">
                    <b>@project.Name</b>
                </MudText>
            </div>

        </div>
    </MudLink>
}

<style>
    .project-card-container {
        position: relative;
        width: 100%;
        height: 400px;
        background-size: cover;
        background-position: center center;
    }

    .project-card-container .project-label-container {
        color: gray;
        backdrop-filter: blur(3px);
        position: absolute;
        width: 100%;
        bottom: 0;
    }

    .project-card-container .project-label {
        font-size: 2.0em;
        color: var(--mud-palette-primary);
        transition: font-size: 2.5em .3s;
        -webkit-transition: color .3s, font-size .3s;
        -moz-transition: color .3s, font-size .3s;
        -o-transition: color .3s, font-size .3s;
        transition: color .3s, font-size .3s;
    }

    .project-card-container:hover .project-label {
        font-size: 2.2em;
        color: var(--mud-palette-secondary);
    }


    .project-card-container img {
        position: absolute;
        pointer-events: none;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
        transition: transform .3s;
        transform: scale(1);
    }

    .project-card-container:hover img {
        transform: scale(1.08);
        background-color: rgba(40, 44, 52, .6);
    }

    .project-card-container div {
        background-color: rgba(40, 44, 52, .85);
    }

    .project-card-container:hover div {
        background-color: rgba(40, 44, 52, .95);
    }
</style>


@code {

    [Parameter] public Project? project { get; set; } = null;
    public string bkgSrc = "img/project-banners/boltoncup.webp";
    public string fgSrc = "img/project-banners/boltoncup.png";
}