@namespace Portfolio.Components

<MudContainer Fixed="true">
    <MudText Class="d-flex justify-start pb-6" Typo="Typo.h6" Color="Color.Primary">
        Coming soon...
    </MudText>
    <MudDivider DividerType="DividerType.Middle" />
    <MudText Class="d-flex justify-center py-2" Typo="Typo.h6" Color="Color.Primary">
        Physics Simulator
    </MudText>
    <MudDivider DividerType="DividerType.Middle" />

    <MudGrid Class="pt-6 pb-4">
        <MudItem Class="d-flex align-center" xs="4">
            <MudLink Href="https://cplusplus.com/" Target="blank" Underline="Underline.None">
                <MudImage Class="rounded-lg" Src="https://raw.githubusercontent.com/isocpp/logos/master/cpp_logo.png"
